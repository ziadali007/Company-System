@model IEnumerable<UserToReturnDto>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<h1>All Users</h1>
<br />
<br />


<form>
    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input name="Search" class="form-control" placeholder="Search by Name"  />
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-primary" value="Search">Search</button>

            </div>

        </div>
       
    </div>
</form>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">

        <thead>
            <tr>                
                <th>Id</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>               
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                   
                    <td>
                       
                            <ul>
                            @foreach (var role in item.Roles)
                                {
                                    <li>@role</li>
                                }
                            </ul>
                        
                    </td>

                    <partial name="ButtonPartialView" model="@item.Id" />

                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div class="mt-4 alert alert-warning" role="alert">
        <h4>No Users Found :( </h4>
    </div>
}

