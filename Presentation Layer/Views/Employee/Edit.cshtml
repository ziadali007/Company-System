@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>

<br />
<br />

<form asp-action="Edit" asp-controller="Employee" method="post">
    <div class="my-3 form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="my-3 form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="my-3 form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="my-3 form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="my-3 form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
    </div>
    <div class="my-3 form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="my-3 form-group">
        <input asp-for="IsActive" class="form-check" />
        <label asp-for="IsActive"></label>
    </div>
    <div class="my-3 form-group">
        <input asp-for="IsDeleted" class="form-check" />
        <label asp-for="IsDeleted"></label>
    </div>
    <div class="my-3 form-group">
        <label asp-for="HiringDate"></label>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <div class="my-3 form-group">
        <label asp-for="CreateAt"></label>
        <input asp-for="CreateAt" class="form-control" />
    </div>
    <div class="my-3">
        <button type="submit" value="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary">Back</a>
    </div>
</form>