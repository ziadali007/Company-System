@model CreateDepartmentDto
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<br />
<br />

<form asp-action="Edit" asp-controller="Department" method="post">
    <partial name="PartialViews/CreateEditPartialView" />
    <div class="my-3">
        <button type="submit" value="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Department" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}