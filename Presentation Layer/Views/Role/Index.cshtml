@model IEnumerable<RoleToReturnDto>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<h1>All Roles</h1>
<br />
<br />


<form>
    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input name="Search" class="form-control" placeholder="Search by Name"  />
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-primary" value="Search">Search</button>

            </div>

        </div>
       
    </div>
</form>

<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">

        <thead>
            <tr>                
                <th>Id</th>
                <th>Name</th>                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>               
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    
                   <partial name="ButtonPartialView" model="@item.Id" />

                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div class="mt-4 alert alert-warning" role="alert">
        <h4>No Roles Found :( </h4>
    </div>
}

