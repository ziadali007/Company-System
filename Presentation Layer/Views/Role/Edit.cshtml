@model RoleToReturnDto
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Role</h1>

<br />
<br />

<form asp-action="Edit" asp-controller="Role" method="post" enctype="multipart/form-data">
    <partial name="PartialViews/CreateEditPartialView" />

    <div class="my-3">
        <a asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id" class="btn btn-success">Add Or Remove User</a>
        <button type="submit" value="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Role" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}